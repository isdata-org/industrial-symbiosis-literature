	journal = {LANDSCAPE AND URBAN PLANNING},
	author = {Naveh, Z},
	month = aug,
	year = {2000},
	note = {5th IALE World Congress of the International-Association-of-Landscape Ecology (IALE), SNOWMASS, COLORADO, AUG, 1999},
