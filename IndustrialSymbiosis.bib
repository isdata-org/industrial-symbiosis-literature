	journal = {Journal of Cleaner Production},
	author = {Nuhoff-Isakhanyan Dr., Gohar and Wubben Dr., Emiel F. M. and Omta Prof Dr., Onno S. W. F. and Pascucci Prof Dr., Stefano},
	month = jan,
	year = {2017},
	keywords = {Agro-industrial parks, Inter-organizational networks, Sustainability performance},
