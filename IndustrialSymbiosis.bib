	file = {ScienceDirect Full Text PDF:files/4073/Nuhoff-Isakhanyan Dr. et al. - 2017 - Network structure in sustainable agro-industrial p.pdf:application/pdf;ScienceDirect Snapshot:files/4072/S0959652616315372.html:text/html}
}

