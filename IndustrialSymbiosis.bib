@article{zhang_analysis_2013,
	title = {Analysis of low-carbon industrial symbiosis technology for carbon mitigation in a {Chinese} iron/steel industrial park: {A} case study with carbon flow analysis},
	volume = {61},
	issn = {0301-4215},
	url = {http://www.sciencedirect.com/science/article/pii/S0301421513004187},
