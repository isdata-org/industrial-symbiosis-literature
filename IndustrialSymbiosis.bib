	month = jan,
	year = {2014},
	pages = {213--236}
}

@article{martin_quantifying_2014,
	title = {Quantifying the environmental performance of integrated bioethanol and biogas production},
	volume = {61},
	issn = {0960-1481},
	doi = {10.1016/j.renene.2012.09.058},
	abstract = {As the production of biofuels continues to expand worldwide, criticism about, e.g. the energy output versus input and the competition with food has been questioned. However, biofuels have the possibility to be optimized in order to improve the environmental performance. This could be accomplished through the use of concepts from industrial symbiosis. This paper provides a quantification of the environmental performance of industrial symbiosis in the biofuel industry through integration of biogas and ethanol processes using a life cycle approach. Results show that although increasing integration is assumed to produce environmental benefits, not all impact categories have achieved this and the results depend upon the allocation methods, energy system and assumptions chosen. (C) 2012 Elsevier Ltd. All rights reserved.},
