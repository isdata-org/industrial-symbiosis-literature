	author = {Wu, Junnian and Wang, Ruiqi and Pu, Guangying and Qi, Hang},
	month = dec,
	year = {2016},
	keywords = {Carbon dioxide emissions, Energy, exergy, Industrial symbiosis, Iron and steel},
	pages = {430--444},
	file = {ScienceDirect Full Text PDF:files/4017/Wu et al. - 2016 - Integrated assessment of exergy, energy and carbon.pdf:application/pdf;ScienceDirect Snapshot:files/4016/S0306261916313010.html:text/html}
}

