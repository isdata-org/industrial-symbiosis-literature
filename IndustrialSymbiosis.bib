	author = {Wells, Peter and Zapata, Clovis},
	month = oct,
	year = {2012},
	keywords = {biomaterials, biomaterials, biorefinery, biorefinery, Industrial symbiosis, industrial symbiosis, Kalundborg, Kalundborg, renewable resource, renewable resource, sugarcane ethanol, sugarcane ethanol},
	pages = {665--668},
