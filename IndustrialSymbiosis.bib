	keywords = {Diversity, Evolution, Forest industry, Industrial ecology, Industrial ecosystem, Roundput, System boundary},
	pages = {169--186},
	file = {ScienceDirect Full Text PDF:files/9202/Korhonen and Snäkin - 2005 - Analysing the evolution of industrial ecosystems .pdf:application/pdf;ScienceDirect Snapshot:files/9008/S0921800904002915.html:text/html}
