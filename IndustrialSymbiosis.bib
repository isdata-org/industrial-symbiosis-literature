	pages = {452--464},
	file = {ScienceDirect Full Text PDF:files/3786/Gibbs and Deutz - 2005 - Implementing industrial ecology Planning for eco-.pdf:application/pdf;ScienceDirect Snapshot:files/3785/S0016718504001071.html:text/html;Snapshot:files/3131/S0016718504001071.html:text/html}
}

