}

@article{sokka_analyzing_2011,
	title = {Analyzing the {Environmental} {Benefits} of {Industrial} {Symbiosis} {Life} {Cycle} {Assessment} {Applied} to a {Finnish} {Forest} {Industry} {Complex}},
